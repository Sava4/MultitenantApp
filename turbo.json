{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": ["VENDOR_TENANT_ID", "UPSTREAM_API_URL"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["VENDOR_TENANT_ID", "UPSTREAM_API_URL"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "clean": {
      "cache": false
    }
  }
}
